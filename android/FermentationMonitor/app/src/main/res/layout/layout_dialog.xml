<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="219dp"
                android:layout_height="34dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:text="Enter Brew Title"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/FGInput"
                android:layout_width="262dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:digits="0123456789."
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <EditText
                android:id="@+id/idealSgInput"
                android:layout_width="262dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:digits="0123456789."
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="219dp"
                android:layout_height="34dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="8dp"
                android:text="Enter Final Gravity"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idealTempInput" />

            <EditText
                android:id="@+id/brewTitleInput"
                android:layout_width="262dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="219dp"
                android:layout_height="34dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:text="Enter Starting Gravity"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/yeastTypeInput" />

            <EditText
                android:id="@+id/yeastTypeInput"
                android:layout_width="262dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="219dp"
                android:layout_height="34dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:text="Enter Yeast Type"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brewTitleInput" />

            <EditText
                android:id="@+id/idealTempInput"
                android:layout_width="262dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:digits="0123456789."
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="254dp"
                android:layout_height="34dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:text="Enter Ideal Temperature (Â°F)"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idealSgInput" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>